# ========================================
# CONFIGURAÇÃO DO SISTEMA - LIBRA ENERGIA
# ========================================
# 
# Copie este arquivo para .env na raiz do projeto
# e configure com suas informações reais

# ========================================
# GOOGLE PLACES API (OBRIGATÓRIO)
# ========================================
# Sua chave da API do Google Places
# Obtenha em: https://console.cloud.google.com/
GOOGLE_PLACES_API_KEY=sua_chave_api_aqui

# ========================================
# GOOGLE SHEETS (OPCIONAL)
# ========================================
# Arquivo de credenciais OAuth2 do Google
GOOGLE_SHEETS_CREDENTIALS_FILE=docs/credentials.json

# ID da planilha do Google Sheets
# Encontre na URL: https://docs.google.com/spreadsheets/d/ID_AQUI/edit
GOOGLE_SHEETS_SPREADSHEET_ID=seu_spreadsheet_id_aqui

# ========================================
# CONFIGURAÇÕES DA EMPRESA
# ========================================
# Nome da sua empresa
EMPRESA_NOME=Libra Energia

# Nome do representante
REPRESENTANTE_NOME=Seu Nome

# Telefone do representante
REPRESENTANTE_TELEFONE=(11) 99999-9999

# ========================================
# CONFIGURAÇÕES DE SCRAPING
# ========================================
# Delay entre requisições (em segundos)
# Recomendado: 2-5 segundos para evitar bloqueios
SCRAPING_DELAY=3

# Máximo de resultados por busca
# Recomendado: 20-50 para testes, 100+ para produção
MAX_RESULTS_PER_SEARCH=50

# Executar navegador em modo headless (sem interface)
# true = sem interface (mais rápido), false = com interface (mais visível)
HEADLESS_BROWSER=true

# ========================================
# CONFIGURAÇÕES AVANÇADAS
# ========================================
# Modo de teste (true = dados limitados, false = busca completa)
TEST_MODE=false

# Cidades para busca (separadas por vírgula)
# Exemplo: "São Paulo, SP", "Rio de Janeiro, RJ"
CIDADES_INICIAIS="São Paulo, SP"

# Palavras-chave para busca
# Exemplo: supermercado, padaria, academia, clinica
PALAVRAS_CHAVE=supermercado, padaria, academia

# ========================================
# CONFIGURAÇÕES DE LOG
# ========================================
# Nível de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Salvar logs em arquivo (true/false)
SAVE_LOGS=true

# ========================================
# CONFIGURAÇÕES DE EXPORTAÇÃO
# ========================================
# Formato de exportação (csv, json, xlsx)
EXPORT_FORMAT=csv

# Incluir dados completos na exportação (true/false)
EXPORT_FULL_DATA=true

# ========================================
# CONFIGURAÇÕES DE QUALIFICAÇÃO
# ========================================
# Score mínimo para qualificação automática (0-6)
MIN_SCORE_QUALIFICATION=4

# Critérios obrigatórios para qualificação
# Valores: telefone, cnae, endereco, nome, website, social
REQUIRED_CRITERIA=telefone, cnae, endereco, nome

# ========================================
# CONFIGURAÇÕES DE BACKUP
# ========================================
# Fazer backup automático dos dados (true/false)
AUTO_BACKUP=true

# Intervalo de backup (em horas)
BACKUP_INTERVAL=24

# Manter backups por (em dias)
BACKUP_RETENTION=30
